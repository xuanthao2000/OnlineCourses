<div class="mt-4">
    <div class="container">
        <h2>Chỉnh sửa khóa học</h2>
        <form method="post" action="/admin/courses/edit/{{courses._id}}?_method=put">
            <div class="mb-3">
                <label for="name" class="form-label">Tên khóa học:</label>
                <input type="text" class="form-control" id="name" name="name" value="{{courses.name}}">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Mô tả:</label>
                <textarea class="form-control" id="description" name="description" >{{courses.description}}</textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Hình ảnh:</label>
                <input type="text" class="form-control" id="image" name="image" value="{{courses.image}}">
            </div>
            <div class="mb-3">
                <label for="slug" class="form-label">Slug:</label>
                <input type="text" class="form-control" id="slug" name="slug" value="{{courses.slug}}">
            </div>
            <div class="mb-3">
                <label for="videoID" class="form-label">Video ID:</label>
                <input type="text" class="form-control" id="videoID" name="videoID" value="{{courses.videoID}}">
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>